.code_box {
    text-align: center;
    background-color: white;
    margin-top: 30rpx;
    padding: 17rpx;
  }
  
  .code_box_record {
    display: flex;
  }
  
  .code_box_record_title {
    font-size: 26rpx;
    color: rgba(0, 0, 0, 0.5);
    padding: 20rpx 0;
  }
  
  .code_box_record_detail {
    font-size: 26rpx;
    text-align: center;
    margin: auto;
    padding: 20rpx 0;
  }
  
  .detail_button {
    width: 64%;
    height: 32%;
    font-size: 23rpx;
    margin: auto auto auto auto;
    border-radius: 5rpx;
    background-color: mediumaquamarine;
  }